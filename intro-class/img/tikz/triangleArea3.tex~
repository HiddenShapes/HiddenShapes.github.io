\usepackage{tikz}

\begin{document}
\begin{tikzpicture}
  \draw [thick,fill=blue, opacity=0.3] (0,0) rectangle (3,1);
  \node at (2,-0.2) {$ b $};
  \draw[thick,opacity=0.3] (1.4,1)--(1.4,0);
  \node at (1.55,0.6) {$ \frac{h}{2} $};
  \draw[green,opacity=0] (0.5,1.9) circle (0.1);
  \draw[color=gray,thick,opacity=1] (0,0)--(3,0)--(3,1)--(0,1)--(0,0)--(3,0);
  \draw[thick, dashed] (0.7,1)--(0,0);
  \draw[thick, dashed] (2.2,1)--(3,0);
  \draw[fill=red] (0.7,1) circle (0.05);
  \draw[fill=red] (2.2,1) circle (0.05);
\end{tikzpicture}	
